<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ano_add_calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:hint="Ano"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="2017" />

    <EditText
        android:id="@+id/id_add_calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:hint="Jogo nº"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="01" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:gravity="bottom"
            android:hint="Data"
            android:inputType="date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="05/09/1986" />

        <TextView
            android:id="@+id/separador_hora_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/hora_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:gravity="bottom"
            android:hint="Hora"
            android:inputType="time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="08:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/santa_cruz_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:text="Santa Cruz"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/separador_x_times_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:text="x"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/adversario_add_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:hint="Adversario"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Adversário" />

    </LinearLayout>

    <EditText
        android:id="@+id/local_add_calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:hint="Local do jogo"
        android:inputType="textCapWords"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Cachoeirinha" />

    <Button
        android:id="@+id/btnAddItemCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar" />

</LinearLayout>