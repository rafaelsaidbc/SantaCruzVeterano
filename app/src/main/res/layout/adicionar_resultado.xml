<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdicionarResultado">

    <EditText
        android:id="@+id/data_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Data do jogo"
        android:inputType="textCapWords" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Santa Cruz" />

        <EditText
            android:id="@+id/gols_sta_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" x " />

        <EditText
            android:id="@+id/gols_adversario_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/adversario_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="AdversÃ¡rio"
            android:inputType="textCapWords" />

    </LinearLayout>

    <EditText
        android:id="@+id/gols_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Gols marcados por..."
        android:inputType="textCapWords" />

</LinearLayout>
