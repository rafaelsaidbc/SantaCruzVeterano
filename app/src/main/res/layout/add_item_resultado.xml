<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ano_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:hint="Ano"
        android:inputType="textCapWords"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="2017" />

    <EditText
        android:id="@+id/id_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:hint="Jogo nº"
        android:inputType="textCapWords"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="01" />

    <EditText
        android:id="@+id/data_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="bottom"
        android:hint="Data"
        android:inputType="textCapWords"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="05/09/1986" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/santa_cruz_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:text="Santa Cruz"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/gols_sta_cruz_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:hint="Gols"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="0" />

        <TextView
            android:id="@+id/separador_x_times_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:text="x"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/gols_adversario_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:hint="Gols"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="0" />


        <EditText
            android:id="@+id/adversario_add_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:hint="Adversario"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Adversário" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
        android:id="@+id/gols_marcadores_add_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
            android:hint="Rafael, Rafael, Rafael, Douglas, Douglas, Erick..."
        android:inputType="textCapWords"
        android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Rafael, Rafael, Rafael, Douglas, Douglas, Erick..." />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddItemResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar" />

</LinearLayout>